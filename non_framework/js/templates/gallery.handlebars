<div id="overviewCarousel" class="carousel slide" data-ride="carousel">
  
  <!-- Indicators -->
  {{#if galleryControls}}
    <ol class="carousel-indicators">
      {{#each galleryPics}}
        <li data-target="#overviewCarousel" data-slide-to="{{this.index}}" title="{{this.caption}}" class="{{this.active}}"></li>
      {{/each}}                
    </ol>
  {{/if}}

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    {{#each galleryPics}}
      <div class="item {{this.active}}"><img src="{{this.pic}}"></div>
    {{/each}}
  </div>

  <!-- Left and right controls -->
  {{#if galleryControls}}
    <a class="left carousel-control" href="#overviewCarousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#overviewCarousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  {{/if}}
</div>